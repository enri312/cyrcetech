<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.cyrcetech.interface_adapter.controller.ClientFormController"
    style="-fx-background-color: #0f0f1a; -fx-padding: 20;">

    <Label fx:id="titleLabel" text="%client.form.title.new" textFill="WHITE">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <GridPane vgap="15" hgap="10">
        <Label text="%clients.name" textFill="#a0a0b0" GridPane.rowIndex="0"
            GridPane.columnIndex="0" />
        <TextField fx:id="nameField" styleClass="text-field" GridPane.rowIndex="0"
            GridPane.columnIndex="1" HBox.hgrow="ALWAYS" />

        <Label text="%clients.taxId" textFill="#a0a0b0" GridPane.rowIndex="1"
            GridPane.columnIndex="0" />
        <TextField fx:id="taxIdField" styleClass="text-field" GridPane.rowIndex="1"
            GridPane.columnIndex="1" />

        <Label text="%clients.phone" textFill="#a0a0b0" GridPane.rowIndex="2"
            GridPane.columnIndex="0" />
        <TextField fx:id="phoneField" styleClass="text-field" GridPane.rowIndex="2"
            GridPane.columnIndex="1" />

        <Label text="%clients.address" textFill="#a0a0b0" GridPane.rowIndex="3"
            GridPane.columnIndex="0" />
        <TextField fx:id="addressField" styleClass="text-field" GridPane.rowIndex="3"
            GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="%client.form.cancel" onAction="#handleCancel" styleClass="button-secondary" />
        <Button text="%client.form.save" onAction="#handleSave" styleClass="button-primary" />
    </HBox>

</VBox>