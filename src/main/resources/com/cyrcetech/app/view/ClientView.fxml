<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.cyrcetech.interface_adapter.controller.ClientController" styleClass="root">

    <center>
        <VBox spacing="20" style="-fx-background-color: #0f0f1a;">
            <padding>
                <Insets top="30.0" left="30.0" right="30.0" bottom="30.0" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="%clients.back" onAction="#handleBack" styleClass="button-secondary" />
                <Label text="%clients.title" styleClass="title-label">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="%clients.search.placeholder"
                    prefWidth="250" onKeyReleased="#handleSearch" styleClass="text-field" />
                <Button text="%clients.exportPdf" onAction="#handleExportPdf"
                    styleClass="button-secondary" />
                <Button text="%clients.edit" onAction="#handleEditClient"
                    styleClass="button-secondary" />
                <Button text="%clients.delete" onAction="#handleDeleteClient"
                    styleClass="button-danger" />
                <Button text="%clients.newClient" onAction="#handleNewClient"
                    styleClass="button-primary" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="clientTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="nameColumn" text="%clients.name" prefWidth="180" />
                    <TableColumn fx:id="taxIdColumn" text="%clients.taxId" prefWidth="100" />
                    <TableColumn fx:id="phoneColumn" text="%clients.phone" prefWidth="120" />
                    <TableColumn fx:id="addressColumn" text="%clients.address" prefWidth="180" />
                    <TableColumn fx:id="categoryColumn" text="%clients.category" prefWidth="100" />
                    <TableColumn fx:id="seniorityColumn" text="%clients.seniority" prefWidth="100" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>