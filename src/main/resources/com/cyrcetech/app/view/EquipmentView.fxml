<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.cyrcetech.interface_adapter.controller.EquipmentController" styleClass="root">

    <center>
        <VBox spacing="20" style="-fx-background-color: #0f0f1a;">
            <padding>
                <Insets top="30.0" left="30.0" right="30.0" bottom="30.0" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="⬅ Volver" onAction="#handleBack" styleClass="button-secondary" />
                <Label text="Gestión de Equipos" styleClass="title-label">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />
                <Button text="➕ Nuevo Equipo" onAction="#handleNewEquipment"
                    styleClass="button-primary" />
            </HBox>

            <!-- Table -->
            <TableView fx:id="equipmentTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="typeColumn" text="Tipo" prefWidth="100" />
                    <TableColumn fx:id="brandColumn" text="Marca" prefWidth="150" />
                    <TableColumn fx:id="modelColumn" text="Modelo" prefWidth="150" />
                    <TableColumn fx:id="serialColumn" text="Serie" prefWidth="150" />
                    <TableColumn fx:id="conditionColumn" text="Estado" prefWidth="150" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>